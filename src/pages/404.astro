---
import Hero from '../components/Hero.astro';
import Layout from '../layouts/Layout.astro';
import '../styles/global.pcss';
const description = "oh no!";
---
<Layout pageTitle={description}>
    <div class="lost">
        <Hero />
        <h1 class="lost__header brand">{description}</h1>
        <p class="lost__body grey">this place doesn't exist</p>
        <p>
            <a href="/">
                <button class="btn">Return home</button>
            </a>
        </p>
    </div>
</Layout>
