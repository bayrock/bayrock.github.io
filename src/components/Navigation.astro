---
import ThemeIcon from './ThemeIcon.astro';
---
<div class="navbar">
    <div class="navbar__title">
        <a href="/" class="navbar__link">bayrock.dev</a>
    </div>
    <div class="navbar__menu">
        <a href="/projects/" class="navbar__link margin hidden" aria-label="Visit projects page">Works</a>
        <a href="/posts/" class="navbar__link margin hidden" aria-label="Visit blog page">Posts</a>
        <ThemeIcon />
    </div>
</div>

<style>
    .navbar {
        display: grid;
        grid-template-columns: 1fr 1fr;
        margin-top: 0.8rem;
    }

    .navbar__title {
        font-family: var(--header);
        font-size: 1.3rem;
    }

    .navbar__menu {
        font-family: var(--body);
        font-size: 1.1rem;
        text-align: right;
    }

    .navbar__link {
        color: white;
        text-decoration: none;
    }

    .navbar__link:hover, .navbar__menu > .navbar__link:focus {
        text-decoration: underline var(--brand);
        text-decoration-thickness: 2px;
        text-underline-offset: 6px;
    }

    :global(.light .navbar__link) { color: black; }

    @media only screen and (max-width: 600px) {
        .navbar { display: initial; }
        .navbar__title { text-align: center; }
        .navbar__menu { text-align: center; }
        .navbar__menu > a { margin: 0 11px; }
    }
</style>
