---
import ThemeIcon from './ThemeIcon.astro';
---
<div class="navbar">
    <div class="navbar__title">
        <a href="/" id="home" class="navbar__link">bayrock.dev</a>
    </div>
    <div class="navbar__menu">
        <a href="/projects" class="navbar__link" aria-label="Visit projects page">/projects</a>
        <a href="/blog" class="navbar__link" aria-label="Visit blog page">/blog</a>
        <ThemeIcon />
    </div>
</div>

<style>
    .navbar { grid-template-columns: 1fr 1fr; }

    .navbar__title {
        text-align: center;
        font-family: var(--header);
        font-size: 1.3rem;
    }

    .navbar__menu {
        font-family: var(--body);
        font-size: 1.1rem;
        text-align: center;
    }

    .navbar__link {
        color: white;
        text-decoration: none;
    }

    .navbar__link:hover, .navbar__menu > .navbar__link:focus {
        text-decoration: underline var(--brand);
        text-decoration-thickness: 2px;
        text-underline-offset: 6px;
    }

    .navbar__menu > .navbar__link { margin: 0 10px; }

    :global(.light .navbar__link) { color: black; }

    @media only screen and (min-width: 600px) {
        .navbar { 
            display: grid; 
            margin-top: 0.8rem;
        }
        .navbar__title { text-align: initial; }
        .navbar__menu { text-align: right; }
    }
</style>
