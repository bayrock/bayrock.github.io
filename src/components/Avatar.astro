---
import githubID from '../../ghid.mjs';
const avatar = `https://avatars.githubusercontent.com/u/${githubID}?v=4&s=230`
---
<picture>
    <source srcset={avatar} type="image/webp">
    <img src={avatar} alt="profile picture" class="pfp circle" width="150" height="150">
</picture>

<style>
    .pfp { max-width: 150px; }

    @media only screen and (max-width: 600px) {
        .pfp { max-width: 125px; }
    }
</style>
